{
    "name": "odan/plates-asset-cache",
    "type": "library",
    "description": "Caching and compression for Plates template assets (JavaScript and CSS).",
    "keywords": [
        "plates",
        "assets",
        "cache",
        "javascript",
        "css",
        "minify"
    ],
    "homepage": "https://github.com/odan/plates-asset-cache",
    "license": "MIT",
    "authors": [
        {
            "name": "odan",
            "homepage": "https://github.com/odan"
        }
    ],
    "require": {
        "php": "^7.0",
        "symfony/cache": "^3.2",
        "tubalmartin/cssmin": "^4.1",
        "mrclay/jsmin-php": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^7.0|^6.0",
        "league/plates": "3.*",
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpstan-shim": "^0.11|^0.10|^0.9",
        "squizlabs/php_codesniffer": "^3.4"
    },
    "scripts": {
        "test": "phpunit --configuration phpunit.xml",
        "test-coverage": "phpunit --configuration phpunit.xml --coverage-clover build/logs/clover.xml --coverage-html build/coverage",
        "check-style": "phpcs --standard=phpcs.xml",
        "fix-style": "phpcbf --standard=phpcs.xml",
        "phpstan": "phpstan analyse src tests --level=max -c phpstan.neon --no-progress",
        "lint": "php -r \"array_map (function() { passthru('php -l ' . func_get_arg(0)); }, glob('{src/*.php,tests/*.php}', GLOB_BRACE));\""
    },
    "autoload": {
        "psr-4": {
            "Odan\\Asset\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Odan\\Test\\": "tests/"
        }
    }
}
