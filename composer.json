{
    "name": "odan/plates-asset-cache",
    "type": "library",
    "description": "Caching and compression for Plates template assets (JavaScript and CSS).",
    "keywords": [
        "plates",
        "assets",
        "cache",
        "javascript",
        "css",
        "minify"
    ],
    "homepage": "https://github.com/odan/plates-asset-cache",
    "license": "MIT",
    "authors": [
        {
            "name": "odan",
            "homepage": "https://github.com/odan"
        }
    ],
    "require": {
        "php": "^7.0",
        "symfony/cache": "^3.2",
        "tubalmartin/cssmin": "^4.1",
        "mrclay/jsmin-php": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "league/plates": "3.*",
        "mikey179/vfsstream": "^1.6",
        "phpstan/phpstan-shim": "^0.11|^0.10|^0.9"
    },
    "scripts": {
        "test": "php vendor/phpunit/phpunit/phpunit",
        "test-coverage": "php vendor/phpunit/phpunit/phpunit --coverage-clover build/logs/clover.xml --coverage-html build/coverage",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit -n src tests",
        "phpstan": "php vendor/bin/phpstan.phar analyse src tests --level=max -c phpstan.neon --no-progress",
        "phpstan-win": "php vendor/phpstan/phpstan-shim/phpstan analyse src tests --level=max -c phpstan.neon --no-progress"
    },
    "autoload": {
        "psr-4": {
            "Odan\\Asset\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Odan\\Test\\": "tests/"
        }
    }
}
